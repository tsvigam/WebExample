
@model IEnumerable<WebExample.Models.Expensce>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expences Items</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expensce" asp-action="Create" class="btn btn-primary"> Create new Expensce</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style=" width:100% ">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var expensce in Model)
                {
                    <tr>
                        <td width="35%">@expensce.ItemName</td>
                        <td width="20%">@expensce.Amount</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expensce" asp-action="Update" asp-route-id="@expensce.Id" class="btn btn-primary mx-1"> Update </a>
                                <a asp-controller="Expensce" asp-action="Delete" asp-route-id="@expensce.Id" class="btn btn-danger mx-1"> Delete </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Items not created yet</p>
    }
</div>

